import { describe, expect, test } from 'vitest';
import { measurePerformance } from '../../utils/performanceUtils';

describe('Performance Tests', () => {
  describe('Critical Paths', () => {
    test('should measure task loading performance', async () => {
      const result = await measurePerformance('task-loading');
      expect(result.duration).toBeLessThan(1000); // Should complete in under 1 second
    });

    test('should measure authentication performance', async () => {
      const result = await measurePerformance('authentication');
      expect(result.duration).toBeLessThan(500); // Should complete in under 500ms
    });
  });
});